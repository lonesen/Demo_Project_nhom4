<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="clothesLuxury">
        <class>model.CategoryEntity</class>
        <class>model.OrderEntity</class>
        <class>model.OrderDetailEntity</class>
        <class>model.ProductEntity</class>
        <class>model.SupplierEntity</class>
        <class>model.UserEntity</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;encrypt=true;trustServerCertificate=true;database=clothesLuxury"/>
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value="2004"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
